  "contributes": {
    "themes": [
      {
        "label": "BedarX Pro Classic",
        "uiTheme": "vs-dark",
        "path": "./themes/bxp-classic-theme.json"
      },
      {
        "label": "BedarX Pro Midnight",
        "uiTheme": "vs-dark",
        "path": "./themes/bxp-midnight-theme.json"
      },
      {
        "label": "BedarX Pro Modern",
        "uiTheme": "vs-dark",
        "path": "./themes/bxp-modern-theme.json"
      },
      {
        "label": "BedarX Pro Light",
        "uiTheme": "vs",
        "path": "./themes/bxp-light-theme.json"
      }
    ]
  },
  "galleryBanner": {
    "color": "#101218",
    "theme": "dark"
  },
  "icon": "Public/bxp-theme-icon.png",
  "sponsor": {
    "url": "https://buymeacoffee.com/saqibbedar"
